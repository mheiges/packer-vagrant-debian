{
  "variables":
    {
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "source_path": "builds/virtualbox/debian-9-64-base/debian-9-64-base.ovf"
    },

  "builders": [
    {
      "output_directory": "builds/virtualbox/debian-9-64",
      "source_path": "{{user `source_path`}}",
      "vm_name": "debian-9-64-vagrant",
      "type": "virtualbox-ovf",
      "headless": "true",
      "ssh_pty" : "true",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "60m",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now"
    }
  ],

  "provisioners": [
    {
      "type": "shell-local",
      "command": "ansible-galaxy install -f -p ansible/roles -r ansible/requirements.yml"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "scripts": [
        "scripts/noop.sh"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "ansible/playbook.yml",
      "ansible_env_vars": [
        "ANSIBLE_CONFIG=ansible/ansible.cfg"
      ],
      "extra_arguments": [
        "--ssh-extra-args",
        "-o AddKeysToAgent=no -o IdentitiesOnly=yes"
      ]
    }
  ],

  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "builds/virtualbox/vagrant/debian-9-64/debian-9-64.box",
        "keep_input_artifact": false
      }
    ]
  ]
}
